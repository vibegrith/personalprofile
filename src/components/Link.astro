---
// Henter parametrene fra Astro.props
const { href="#", target="_self"} = Astro.props; 

---
<div class="animate__animated animate__pulse animate__infinite flex flex-col items-start md:ml-6">
<a href={href} class=" font-bold border border-[var(--primary-color-200)] text-center py-2 px-4 md:py-4 md:px-10 hover:bg-[var(--primary-color-200)] hover:text-[var(--primary-color-100)]" target={target} ><slot />View site</a>
</div>

